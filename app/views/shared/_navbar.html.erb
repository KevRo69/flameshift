<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path(year: Date.today.strftime('%Y')), class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <h1 id="firestation-name">CIS Azé</h1>

    <div id="navbarSupportedContent" class="mx-3">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa-solid fa-bars fa-2xl icon-navbar" style="color: #ffffff; width: 24px;"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Accueil", root_path(year: Date.today.strftime('%Y')), class: "dropdown-item" %>
              <%= link_to "Mes dispos / gardes", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Toutes les gardes", cares_path(month: I18n.l(Date.today, format: '%B').downcase, year: Date.today.strftime('%Y')), class: "dropdown-item" %>
              <% if current_user.validator %>
                <%= link_to "Générer les gardes", new_care_path, class: "dropdown-item" %>
                <%= link_to "Modifier les gardes", modify_cares_path(month: I18n.l(Date.today, format: '%B').downcase, year: Date.today.strftime('%Y')), class: "dropdown-item" %>
              <% end %>
              <%= link_to "Infos centre", infos_path, class: "dropdown-item" %>
              <%= link_to "Modifier mon compte", edit_user_registration_path, data: { turbo: false }, class: "dropdown-item" %>
              <% if current_user.validator %>
                <%= link_to "Gérer les manœuvres", user_maneuvers_path, data: { turbo: false }, class: "dropdown-item" %>
                <%= link_to "Modifier les profils", users_path, data: { turbo: false }, class: "dropdown-item" %>
                <%= link_to "Paramètres", settings_path, data: { turbo: false }, class: "dropdown-item" %>
              <% end %>
              <%= link_to "Déconnexion", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: "nav-link icon-navbar", style: "width: 24px;" do %>
              <i class="fa-solid fa-right-to-bracket fa-2xl" style="color: #ffffff;"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
