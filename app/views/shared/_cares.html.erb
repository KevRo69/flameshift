<% unless @cares_week1.empty? %>
  <div class="table-container">
    <table>
      <!-- Table Header -->
      <thead>
        <tr>
          <th></th>
          <% @cares_week1.each do |care| %>
            <th><%= care.day.strftime('%d-%m-%Y') %></th>
          <% end %>
        </tr>
      </thead>

      <!-- Table Body -->
      <tbody>
        <% @roles.each_with_index do |role, role_index| %>
          <tr>
            <th><%= role %></th>
            <% @cares_week1.each do |care| %>
              <% user = care.users[role_index] %>
              <% if user == current_user %>
                <td class="active">
              <% else %>
                <td>
              <% end %>
                <% if user %>
                  <%= user.first_name %> <%= user.last_name %>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
