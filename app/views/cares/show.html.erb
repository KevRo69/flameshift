<div class="card-show-container">
  <div class="care-card" id="card-show">
    <h3><%= @care.day.strftime('%d-%m-%Y') %></h3>
      <% 7.times do |index| %>
        <% case index %>
          <% when 0 %>
          <h4>COD1</h4>
          <% when 1 %>
          <h4>CATE</h4>
          <% when 2 %>
          <h4>CE INC</h4>
          <% when 3 %>
          <h4>EQ INC</h4>
          <% when 4 %>
          <h4>EQ SAP / EQ INC</h4>
          <% when 5 %>
          <h4>STG</h4>
          <% when 6 %>
          <h4>SOG</h4>
        <% end %>
        <% unless @care.users[index].nil? %>
          <p><%= @care.users[index].first_name %> <%= @care.users[index].last_name %></p>
        <% end %>
        <% if index == 6 %>
          <p><%= @care.user.first_name %> <%= @care.user.last_name %></p>
        <% end %>
    <% end %>
  </div>
  <% if current_user.validator? %>
    <%= link_to "Modifier", edit_care_path(@care), class: "btn" %>
  <% end %>
</div>
